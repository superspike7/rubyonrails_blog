<div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
  <div class="grid gap-8 lg:grid-cols-3 sm:max-w-sm sm:mx-auto lg:max-w-full">
    <% @articles.each do |article| %>
    <div class="p-8 bg-white border rounded shadow-sm">
      <p class="mb-3 text-xs font-semibold tracking-wide uppercase">
        <span class="text-gray-600"> <%= article.created_at.strftime("%d-%m-%Y")%> </span>
      </p>
      <p class="inline-block mb-3 text-2xl font-bold leading-5 text-black transition-colors duration-200 hover:text-deep-purple-accent-400">
       <%= article.title %>
      </p>
      <p class="mb-5 text-gray-700">
        <%= link_to "read more", article_path(article.id) %>
      </p>
    </div>
    <% end %>
  </div>
</div>