<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit Article", edit_article_path(@article) %></li>
  <li><%= link_to "Delete Article", article_path(@article),
              method: :delete,
              data: { confirm: "are you sure?" } %></li>
  <li><%= link_to "Back to Articles", root_path %></li>
</ul>


<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a Comment:</h2>
<%= render 'comments/form' %>


